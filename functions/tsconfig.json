{
  "include": [
    "./src/",
    "../src/sharedTypes/",
    "../tools/functions/functions.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES5",
    "lib": ["ES5"],
    "moduleResolution": "node",
    "paths": {
      // allows types to be shared between the react app and functions
      "sharedTypes/*": [
        "../../src/sharedTypes/*"
      ]
    },
    "allowSyntheticDefaultImports": true
  }
}